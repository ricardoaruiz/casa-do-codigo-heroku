<html>
<head>
    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" media="all"/>   
</head>
<body>
    <div class="erros">
        <% if(errosValidacao) { %>
            <ul>
                <% for(var i=0; i<errosValidacao.length; i++) { %>
                    <li>
                        <%=errosValidacao[i].param%> - 
                        <%=errosValidacao[i].msg%>
                    </li>
                <%}%>
            </ul>
        <%}%>
    </div>
    <div class="container">
    <form action="/produtos" method="post">
        <div class="form-group">
            <label for="titulo">Título</label>
            <input type="text" class="form-control " id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Título do livro">
        </div>
        
        <div>
            <label for="preco">Preço</label>
            <input type="text" class="form-control id="preco" name="preco" value="<%=produto.preco%>" placeholder="Preço do livro ">
        </div>

        <div>
            <label for="descricao">Descrição</label>
            <textarea cols="20" rows="20" class="form-control id="descricao" name="descricao">
                <%if(produto.descricao){%>
                    <%=produto.descricao%>
                <%}%>
            </textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Gravar"/>        
    </form>
    </div>
</body>
</html>